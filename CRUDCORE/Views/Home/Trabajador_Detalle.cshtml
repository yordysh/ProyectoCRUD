@model CRUDCORE.Models.ViewModels.TrabajadorVM;

@{
    ViewData["Title"] = "Trabajador_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oTrabajador.Id == 0)
{
    <h1>Crear Trabajador</h1>
}
else
{
    <h1>Editar Trabajador</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Trabajador_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oTrabajador.Id" />
            <div class="mb-2">
                <label class="form-label" asp-for="oTrabajador.TipoDocumento">Tipo Documento</label>
                <input class="form-control form-control-sm" asp-for="oTrabajador.TipoDocumento" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oTrabajador.NumeroDocumento">Nro Documento</label>
                <input class="form-control form-control-sm" asp-for="oTrabajador.NumeroDocumento" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oTrabajador.Nombres">Nombres</label>
                <input class="form-control form-control-sm" asp-for="oTrabajador.Nombres" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oTrabajador.Sexo">Sexo</label>
                <input class="form-control form-control-sm" asp-for="oTrabajador.Sexo" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oTrabajador.IdDepartamento">Departamento</label>
                @*<input class="form-control form-control-sm" asp-for="oTrabajador.oDepartamento.NombreDepartamento" type="text" />*@
                <select class="form-select form-select-sm" asp-for="oTrabajador.IdDepartamento" asp-items="@Model.oListaDepartamento">
                    <option selected disabled>-- Seleccione --</option>
                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oTrabajador.IdProvincia">Provincia</label>
                <select class="form-select form-select-sm" asp-for="oTrabajador.IdProvincia" asp-items="@Model.oListaProvincia">
                    <option selected disabled>-- Seleccione --</option>
                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oTrabajador.IdDistrito">Distrito</label>
                <select class="form-select form-select-sm" asp-for="oTrabajador.IdDistrito" asp-items="@Model.oListaDistrito">
                    <option selected disabled>-- Seleccione --</option>
                </select>
            </div>

            <div class="mb-2">
                @if (Model.oTrabajador.Id == 0)
                {
                   <button class="btn btn-primary btn-sm m-25">Crear</button>
                   
                }
                else
                {
                    <button class="btn btn-primary btn-sm m-25">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>
        </form>
    </div>
</div>